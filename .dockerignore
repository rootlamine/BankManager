# Ignore Git & Docker metadata
.git
.gitignore
.dockerignore
docker-compose.yml

# Ignore Node/npm/yarn stuff
node_modules
npm-debug.log
yarn-debug.log
yarn-error.log
package-lock.json

# Ignore Laravel cache and logs
storage/logs/*
storage/framework/cache/*
storage/framework/sessions/*
storage/framework/views/*
bootstrap/cache/*

# Keep .gitkeep files
!storage/logs/.gitkeep
!storage/framework/cache/.gitkeep
!storage/framework/sessions/.gitkeep
!storage/framework/views/.gitkeep
!bootstrap/cache/.gitkeep

# Ignore local environment and vendor
.env
.env.*
*.env
!.env.example
vendor

# Ignore local Docker volumes
data_laravel
pgadmin_data

# Ignore tests
tests
.phpunit.result.cache
phpunit.xml

# Ignore IDE / OS files
.idea
.vscode
.DS_Store
Thumbs.db

# Ignore documentation
README.md
*.md
